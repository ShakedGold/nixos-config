(defsrc
  caps
  w
  enter
)

(defalias
  hyperkey (tap-hold-press $tap-time $hold-time esc (layer-while-held mod))
  hw-layer (layer-while-held w_layer)
)

(defvar
  tap-time 150
  hold-time 200
)

(deflayer base
  @hyperkey w enter
)

(deflayermap mod
  w @hw-layer
)

(deflayermap w_layer
  enter w
)
