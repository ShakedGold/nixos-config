(defsrc
  caps
  w
  enter
)

(defalias
  hyperkey (tap-hold-press $tap-time $hold-time esc (multi lsft lctl lalt lmet))
  hw-layer (tap-hold-press $tap-time $hold-time w (layer-while-held w_layer))
)

(defvar
  tap-time 150
  hold-time 200
)

(deflayer base
  @hyperkey @hw-layer enter
)

(deflayer w_layer
  _ w w
)
